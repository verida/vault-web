{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://localhost:3000/schemas/assistant/prompt/v0.1.0/schema.json",
  "name": "http://localhost:3000/schemas/assistant/prompt/v0.1.0/schema.json",
  "title": "User Prompt",
  "titlePlural": "User Prompts",
  "description": "Saved prompts for the assistant",
  "type": "object",
  "database": {
    "name": "prompts"
  },
  "allOf": [
    { "$ref": "https://core.schemas.verida.io/base/v0.1.0/schema.json" },
    {
      "properties": {
        "data": {
          "title": "Custom Links",
          "type": "object",
          "properties": {
            "prompt": {
              "title": "Prompt",
              "type": "string"
            },
            "order": {
              "title": "Order",
              "type": "integer"
            }
          },
          "required": ["prompt"]
        }
      },
      "required": ["data"]
    }
  ]
